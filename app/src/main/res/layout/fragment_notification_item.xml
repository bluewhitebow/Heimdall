<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/Noti_ll1"
        android:layout_width="388dp"
        android:layout_height="134dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/Noti_ll2"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Noti_text1"
                android:layout_width="206dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="cardNum"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/Noti_text3"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                tools:text="!" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Noti_ll3"
            android:layout_width="288dp"
            android:layout_height="39dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Noti_text2"
                android:layout_width="166dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="Time"
                android:textSize="12sp" />

            <Button
                android:id="@+id/Noti_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="删除" />
        </LinearLayout>

        <TextView
            android:id="@+id/Noti_text4"
            android:layout_width="288dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="Time"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>